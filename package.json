{
  "name": "yape",
  "version": "2.0.0",
  "description": "Extension for PyLoad to easily monitor and add downloads",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**/*.{ts,tsx} && tsc -p src --noemit",
    "watch": "webpack --watch --config webpack.dev.js",
    "build": "rm -rf dist && webpack --config webpack.prod.js",
